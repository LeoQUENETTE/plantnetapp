<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivHistoryBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_list"
        android:scaleType="centerCrop" />

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 1) Bouton Retour -->
    <ImageButton
        android:id="@+id/btnBackHistory"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:contentDescription="Retour"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- 2) Barre de recherche qui filtre BOTH -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/svGlobal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Rechercher…"
        android:text="Rechercher une plante…"
        android:iconifiedByDefault="false"
        android:background="#80000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- 3) Historique complet (4 items visibles puis scroll) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historique complet"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="4dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistoryAll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="24dp"/>

    <!-- 4) Mes collections (scroll independent) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes collections"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="4dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCollections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true"/>

    </LinearLayout>
</FrameLayout>
